<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Extended TextView/Button attrs-->
    <attr name="drawableStartIntegerScaling" format="boolean"/>
    <attr name="drawableTopIntegerScaling" format="boolean"/>
    <attr name="drawableEndIntegerScaling" format="boolean"/>
    <attr name="drawableBottomIntegerScaling" format="boolean"/>

    <attr name="drawableStartSize" format="dimension"/>
    <attr name="drawableTopSize" format="dimension"/>
    <attr name="drawableEndSize" format="dimension"/>
    <attr name="drawableBottomSize" format="dimension"/>

    <declare-styleable name="ExtendedView">
        <attr name="drawableStartIntegerScaling"/>
        <attr name="drawableTopIntegerScaling" />
        <attr name="drawableEndIntegerScaling" />
        <attr name="drawableBottomIntegerScaling"/>

        <attr name="drawableStartSize"/>
        <attr name="drawableTopSize" />
        <attr name="drawableEndSize" />
        <attr name="drawableBottomSize"/>
    </declare-styleable>
</resources>